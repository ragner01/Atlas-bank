{
  "Authentication": {
    "Authority": "https://login.microsoftonline.com/<tenant-id>/v2.0",
    "Audience": "api://atlas-public",
    "RequireHttpsMetadata": true
  },
  "RateLimiting": {
    "PermitPerMinute": 120,
    "Redis": "redis:6379"
  },
  "ReverseProxy": {
    "Routes": [
      { "RouteId":"ledger", "ClusterId":"ledger", "Match": { "Path": "/ledger/{**catchall}" }, "AuthorizationPolicy":"ScopeAccountsRead" },
      { "RouteId":"payments", "ClusterId":"payments", "Match": { "Path": "/payments/{**catchall}" }, "AuthorizationPolicy":"ScopePaymentsWrite" },
      { "RouteId":"aml", "ClusterId":"kycaml", "Match": { "Path": "/aml/{**catchall}" }, "AuthorizationPolicy":"ScopeAmlRead" }
    ],
    "Clusters": {
      "ledger":   { "Destinations": { "d1": { "Address": "http://ledgerapi:5181" } } },
      "payments": { "Destinations": { "d1": { "Address": "http://paymentsapi:5191" } } },
      "kycaml":   { "Destinations": { "d1": { "Address": "http://kycamlapi:5201" } } }
    }
  }
}
