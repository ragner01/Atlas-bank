{
  "ConnectionStrings": {
    "Ledger": "Host=atlas-postgres;Port=5432;Database=atlas_bank;Username=atlas;Password=atlas123",
    "Redis": "atlas-redis:6379"
  },
  "Kafka": {
    "BootstrapServers": "atlas-redpanda:9092",
    "MessageTimeoutMs": 30000,
    "RetryBackoffMs": 1000
  },
  "Redis": {
    "ConnectTimeoutSeconds": 5,
    "SyncTimeoutSeconds": 5,
    "AsyncTimeoutSeconds": 5,
    "KeepAliveSeconds": 60,
    "ReconnectRetryDelayMs": 1000
  },
  "Jwt": {
    "SecretKey": "your-super-secret-key-change-in-production",
    "Issuer": "AtlasBank",
    "Audience": "AtlasBankClients",
    "ExpirationMinutes": 60
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://localhost:5173",
      "https://localhost:5173"
    ],
    "AllowCredentials": true,
    "PreflightMaxAgeMinutes": 10
  },
  "RateLimiting": {
    "Enabled": true,
    "GlobalRequestsPerMinute": 1000,
    "EndpointRequestsPerMinute": 100,
    "BurstRequestsPerSecond": 10
  },
  "Resilience": {
    "CircuitBreakerFailureThreshold": 5,
    "CircuitBreakerDurationOfBreakSeconds": 30,
    "RetryCount": 3,
    "RetryDelayMs": 1000,
    "TimeoutSeconds": 30,
    "BulkheadMaxConcurrency": 10,
    "BulkheadMaxQueuedActions": 20
  },
  "Database": {
    "CommandTimeoutSeconds": 30,
    "MaxRetryCount": 3,
    "MaxRetryDelaySeconds": 5
  },
  "LedgerApi": {
    "EnableDetailedErrors": true,
    "EnableSensitiveDataLogging": false,
    "MaxRequestSizeBytes": 1048576,
    "RequestTimeoutSeconds": 30
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Atlas.Ledger": "Debug"
    }
  },
  "AllowedHosts": "*"
}
