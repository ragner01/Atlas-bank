{
  "ConnectionStrings": {
    "Payments": "Host=atlas-postgres;Port=5432;Database=atlas_bank;Username=atlas;Password=atlas123",
    "Redis": "atlas-redis:6379"
  },
  "PaymentsApi": {
    "MaxTransfersPerMinute": 100,
    "MaxTransferAmount": 100000000,
    "IdempotencyExpirationMinutes": 60,
    "EnableGrpcLedger": true,
    "LedgerEndpoint": "https://ledger.atlasbank.com"
  },
  "Redis": {
    "ConnectionTimeoutMs": 5000,
    "SyncTimeoutMs": 5000,
    "AsyncTimeoutMs": 5000,
    "MaxConnections": 10
  },
  "Jwt": {
    "Issuer": "AtlasBank",
    "Audience": "AtlasBank.API",
    "Authority": "https://atlasbank.auth.com",
    "ClockSkewMinutes": 5
  },
  "Cors": {
    "AllowedOrigins": [
      "https://atlasbank.com",
      "https://app.atlasbank.com",
      "https://admin.atlasbank.com"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT", 
      "DELETE",
      "OPTIONS"
    ],
    "AllowedHeaders": [
      "Authorization",
      "Content-Type",
      "X-Tenant-Id",
      "X-Request-ID"
    ],
    "PreflightCacheMinutes": 10
  },
  "RateLimiting": {
    "PermitPerMinute": 60,
    "QueueLimit": 10,
    "WindowMinutes": 1
  },
  "CompressionSettings": {
    "EnableForHttps": true,
    "BrotliLevel": "Optimal",
    "GzipLevel": "Optimal"
  },
  "CachingSettings": {
    "DefaultCacheDurationMinutes": 5,
    "MaxCacheSize": 1000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    }
  },
  "AllowedHosts": "*"
}

