{
  "ConnectionStrings": {
    "Payments": "Host=atlas-postgres;Port=5432;Database=atlas_bank;Username=atlas;Password=atlas123",
    "Redis": "atlas-redis:6379"
  },
  "Services": {
    "LedgerGrpc": "http://docker-ledgerapi-1:5181",
    "VaultBase": "http://docker-cardsvault-1:5600"
  },
  "Redis": {
    "ConnectTimeoutSeconds": 5,
    "SyncTimeoutSeconds": 5,
    "AsyncTimeoutSeconds": 5,
    "KeepAliveSeconds": 60,
    "ReconnectRetryDelayMs": 1000
  },
  "Jwt": {
    "SecretKey": "your-super-secret-key-change-in-production",
    "Issuer": "AtlasBank",
    "Audience": "AtlasBankClients",
    "ExpirationMinutes": 60
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://localhost:5173",
      "https://localhost:5173"
    ],
    "AllowCredentials": true,
    "PreflightMaxAgeMinutes": 10
  },
  "Database": {
    "CommandTimeoutSeconds": 30,
    "MaxRetryCount": 3,
    "MaxRetryDelaySeconds": 5
  },
  "Grpc": {
    "MaxReceiveMessageSize": 4194304,
    "MaxSendMessageSize": 4194304
  },
  "PaymentsApi": {
    "MaxRequestSizeBytes": 1048576,
    "RequestTimeoutSeconds": 30,
    "EnableDetailedErrors": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Atlas.Payments": "Debug"
    }
  },
  "AllowedHosts": "*"
}
